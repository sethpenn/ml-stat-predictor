{
  "connections": [
    {
      "conn_id": "postgres_mlsp",
      "conn_type": "postgres",
      "description": "Main PostgreSQL database connection via PgBouncer",
      "host": "pgbouncer",
      "port": 6432,
      "schema": "mlsp",
      "login": "${POSTGRES_USER}",
      "password": "${POSTGRES_PASSWORD}",
      "extra": {
        "connect_timeout": 10,
        "application_name": "airflow"
      }
    },
    {
      "conn_id": "postgres_mlflow",
      "conn_type": "postgres",
      "description": "MLflow database connection via PgBouncer",
      "host": "pgbouncer",
      "port": 6432,
      "schema": "mlflow",
      "login": "${POSTGRES_USER}",
      "password": "${POSTGRES_PASSWORD}",
      "extra": {
        "connect_timeout": 10,
        "application_name": "airflow"
      }
    },
    {
      "conn_id": "redis_default",
      "conn_type": "redis",
      "description": "Redis cache connection",
      "host": "redis",
      "port": 6379,
      "password": "${REDIS_PASSWORD}",
      "extra": {
        "db": 0
      }
    },
    {
      "conn_id": "mlflow_tracking",
      "conn_type": "http",
      "description": "MLflow tracking server",
      "host": "mlflow",
      "port": 5000,
      "schema": "http",
      "extra": {}
    },
    {
      "conn_id": "backend_api",
      "conn_type": "http",
      "description": "FastAPI backend service",
      "host": "backend",
      "port": 8000,
      "schema": "http",
      "extra": {}
    }
  ]
}
