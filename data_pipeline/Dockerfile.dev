ARG PYTHON_VERSION=3.11
FROM apache/airflow:2.8.0-python${PYTHON_VERSION}

# Switch to root to install system dependencies
USER root

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    libpq-dev \
    curl \
    git \
    procps \
    && rm -rf /var/lib/apt/lists/*

# Switch back to airflow user
USER airflow

# Set working directory
WORKDIR /opt/airflow

# Copy requirements file
COPY requirements.txt .

# Install Python dependencies with Airflow constraints
# This ensures all packages are compatible with Airflow 2.8.0
RUN pip install --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt \
    --constraint "https://raw.githubusercontent.com/apache/airflow/constraints-2.8.0/constraints-3.11.txt"

# Copy DAGs, plugins, and scraper code (in dev, overridden by volume mounts)
COPY dags/ /opt/airflow/dags/
COPY plugins/ /opt/airflow/plugins/
COPY scrapers/ /opt/airflow/scrapers/

# Default command (overridden in docker-compose.yml for different services)
CMD ["airflow", "webserver"]
