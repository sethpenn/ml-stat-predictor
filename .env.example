# =============================================================================
# ML Sport Stat Predictor - Environment Configuration
# =============================================================================
# Copy this file to .env and update with your actual values
# Never commit .env file to version control

# =============================================================================
# General Settings
# =============================================================================
ENVIRONMENT=development  # development, staging, production
COMPOSE_PROJECT_NAME=mlsp

# =============================================================================
# PostgreSQL Configuration
# =============================================================================
POSTGRES_DB=mlsp
POSTGRES_USER=mlsp_user
POSTGRES_PASSWORD=mlsp_password
POSTGRES_PORT=5432
POSTGRES_HOST_AUTH_METHOD=scram-sha-256

# Airflow Database (created automatically)
AIRFLOW_DB=airflow

# MLflow Database (created automatically)
MLFLOW_DB=mlflow

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=redis_password
REDIS_PORT=6379

# =============================================================================
# Backend API Configuration
# =============================================================================
BACKEND_PORT=8000
SECRET_KEY=dev-secret-key-change-in-production-min-32-chars
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# Frontend Configuration
# =============================================================================
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:8000
NODE_VERSION=20

# =============================================================================
# Airflow Configuration
# =============================================================================
AIRFLOW_WEBSERVER_PORT=8080
AIRFLOW_ADMIN_USERNAME=admin
AIRFLOW_ADMIN_PASSWORD=admin
AIRFLOW_ADMIN_EMAIL=admin@example.com

# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AIRFLOW_FERNET_KEY=

# =============================================================================
# MLflow Configuration
# =============================================================================
MLFLOW_PORT=5000

# =============================================================================
# Python/Node Version
# =============================================================================
PYTHON_VERSION=3.11
NODE_VERSION=20

# =============================================================================
# Web Scraping Configuration
# =============================================================================
# Rate limiting (requests per minute)
SCRAPER_RATE_LIMIT=30

# User agent rotation
SCRAPER_USER_AGENT=Mozilla/5.0 (compatible; MLSPBot/1.0)

# Proxy settings (optional)
SCRAPER_PROXY_ENABLED=false
SCRAPER_PROXY_URL=

# =============================================================================
# API Rate Limiting
# =============================================================================
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# Cache TTL (in seconds)
# =============================================================================
CACHE_GAMES_LIST_TTL=300        # 5 minutes
CACHE_GAME_DETAIL_TTL=60        # 1 minute
CACHE_PLAYER_STATS_TTL=1800     # 30 minutes
CACHE_PREDICTION_TTL=3600       # 1 hour
CACHE_STANDINGS_TTL=3600        # 1 hour

# =============================================================================
# Production Only Settings (not used in development)
# =============================================================================
# SSL Certificate paths
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Domain
DOMAIN=your-domain.com

# Database connection pooling
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://your-domain.com
